<div id="div-for-tweetlist"  >
<%if @user_scores.present? %>
<p style="padding-left: 33%; font-size: 25px;" class="android-style">
  <u>SCOREBOARD</u>
</p>
    </br>


  <table class="table table-hover table-bordered">
    <tr>
      <th>Rank</th>
      <th>User</th>
      <th>Score</th>
      <% if user_signed_in? %>
       <th>Posted</th>
      <%end%>
    </tr>
    <% count = (((params[:page] || 1).to_i - 1) * 10) + 1  %>
    <% @user_scores.each do |userscore| %>
            <tr <%if count.eql? 1%> class="success" <%end%>>
              <td>
               <b>
                  <%=count%>
               </b>
              </td>
              <td><b><%= userscore.provider == 'twitter' ? image_tag('Twitter_logo_blue.png') : "" %>@<%= userscore.username%></b></td>
              <td>
               <% if count.eql? 1%>
                <img id="scoreboard_icon" src="/assets/scoreicon.png"/>
               <%else%>
                <%= userscore.score %>
               <%end%>
              </td>
              <% if user_signed_in? %>
                <td><%= userscore.posted %></td>
              <%end%>
        </tr>
        <% count += 1 %>
    <% end %>
  </table>

</div>

<%else%>
   <div class="social-buttons span4 offset4" id="social-buttons">
    <p class="android-style">
      No Reviews Yet
        <a class="btn btn-twitter btn-block" href="/auth/twitter">Sign-in to be 1st!</a>
      </p>
   </div>
<%end%>