<%- model_class = Tweet -%>
<div class="page-header" style="width: 100%;">
  <h1 style="font-weight:lighter; text-align: center; font-family: sans-serif;">Tweet for @AlertsMall</h1>
  <!--<h1><%=t '.title', :default => [:'helpers.titles.new', '%{model} For @PuneFoodAlerts'], :model => model_class.model_name.human.titleize %></h1>-->
</div>

<%= form_for @tweet, :html => { :name => 'post-form', :class => 'form-horizontal' } do |f| %>
    <div class="control-group" style="text-align: center;">
      <div id="inner" >
      <%#= f.label 'tweet', :class => 'label-for-tweet'  %>
        <%= f.text_field :body, :class => 'text', :placeholder => "Post Your Review....", :autocomplete => "off" %>
        <div class="label-for-checkbox">
          <%if request.env["omniauth.auth"].nil? %>
              <%if @username.present? %>
                  <input type="hidden" name="tweet[username]" value=<%= @username%>>
                  <%= link_to "Hide @#{@username}", new_tweet_path(not_john_doe: true) %>
              <%else%>
                  <label class="label-for-checkbox">
                  <input id="JohnDoe" class="checkbox" type="checkbox" onclick="handleClick(this);">
                  Be John Doe
                  </label>
              <%end%>
          <%else%>
              <input type="hidden" name="tweet[username]" value=<%= request.env["omniauth.auth"]["info"]["nickname"]%>>
          <%end%>
        </div>

        <%= f.submit 'Tweet', :class => 'button' %>

      </div>

    </div>

<% end %>




<script>
    $(document).ready(function(){
       if(document.getElementById("JohnDoe").checked == false){
           document['post-form'].action = "/auth/twitter";
       }
    });

    function handleClick(JohnDoe) {
        if(JohnDoe.checked){
            document['post-form'].action = "/tweets";
        }
        if(JohnDoe.checked == false) {
            document['post-form'].action = "/auth/twitter";
        }
    }

</script>